* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  color: rgb(93, 96, 99);
  background-color: rgb(234, 237, 240);
  font-family: "Helvetica", "Arial", sans-serif;
  font-size: 16px;
  line-height: 1.3;
}

.cabecalho {
  text-align: center;
  background-color: rgb(246, 247, 248);
  border: 1px solid rgb(214, 217, 220);
  border-radius: 3px;
  width: 80%;
  margin: 40px 0;
  padding: 50px;
  margin-right: auto;
  margin-left: auto;
}

.cabecalho h1 {
  font-size: 30px;
  margin-bottom: 20px;
}

.formulario {
  background-color: rgb(246, 247, 248);
  border: 1px solid rgb(214, 217, 220);
  border-radius: 3px;
  width: 80%;
  padding: 50px;
  margin: 0 auto 40px auto;
}

.container-nome input[type="text"] {
  background-color: rgb(255, 255, 255);
  border: 1px solid rgb(214, 217, 220);
  border-radius: 3px;
  width: 100%;
  padding: 7px;
  font-size: 14px;
}

.container-nome label {
  margin-bottom: 15px;
}

.conteudo {
  margin: 20px;
  border: 0 none;
}

.quadro-tipo {
  padding: 10px;
  border: 1px solid rgb(214, 217, 220);
  border-radius: 3px;
}

/* extra */

#camiseta {
  font-size: 20px;
  margin-left: 5px;
}

#resumo {
  background-color: rgb(255, 255, 255);
  border: 1px solid rgb(214, 217, 220);
  border-radius: 3px;
  width: 100%;
  padding: 7px;
  font-size: 14px;
  resize: none;
}

.instrucoes {
  font-size: small;
  font-style: italic;
}

button {
  padding: 10px 30px;
  font-size: 13px;
  font-weight: bold;
}

#botao {
  text-align: center;
}